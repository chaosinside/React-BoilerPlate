{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "react/display-name": [0],
      "react/jsx-wrap-multilines": ["error"],
      "react/no-multi-comp": [0],
      "react/no-unescaped-entities": [0],
      "no-class-assign": [0],
      "no-console": [0],
      "no-trailing-spaces": ["error", { "skipBlankLines": true }],
      "no-undef": [0],
      "react/prop-types": [0],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "double"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}